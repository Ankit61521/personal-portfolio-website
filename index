<body>
    <!-- Form Page -->
    <div class="form-page" id="formPage">
        <!-- Header -->
        <div class="header">
            <div class="container">
                <h1>Portfolio Builder</h1>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container">
                <!-- Personal Information Section -->
                <div class="section">
                    <h2>Personal Information</h2>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" id="fullName" placeholder="John Doe">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" placeholder="john@example.com">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="tel" id="phone" placeholder="+1 (555) 000-0000">
                        </div>
                        <div class="form-group">
                            <label for="photoUrl">Photo URL</label>
                            <input type="url" id="photoUrl" placeholder="https://example.com/photo.jpg">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="bio">Bio / About</label>
                        <textarea id="bio" rows="4" placeholder="Tell us about yourself..."></textarea>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="section">
                    <h2>Skills</h2>
                    
                    <div class="skills-input-wrapper">
                        <input type="text" id="skillInput" placeholder="e.g., React, TypeScript, Tailwind CSS">
                        <button class="btn-primary" onclick="addSkill()">
                            + Add
                        </button>
                    </div>

                    <div class="skills-tags" id="skillsList"></div>
                </div>

                <!-- Experience Section -->
                <div class="section">
                    <h2>Experience</h2>
                    
                    <div id="experienceList"></div>

                    <div class="add-exp-form" id="expForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="expTitle">Job Title</label>
                                <input type="text" id="expTitle" placeholder="Job Title">
                            </div>
                            <div class="form-group">
                                <label for="expCompany">Company</label>
                                <input type="text" id="expCompany" placeholder="Company">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="expStart">Start Date</label>
                                <input type="month" id="expStart">
                            </div>
                            <div class="form-group">
                                <label for="expEnd">End Date</label>
                                <input type="month" id="expEnd">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="expDescription">Description (optional)</label>
                            <textarea id="expDescription" rows="3" placeholder="Description..."></textarea>
                        </div>

                        <div class="button-group">
                            <button class="btn-primary" onclick="saveExperience()" style="flex: 1;">Save Experience</button>
                            <button class="btn-secondary" onclick="cancelExperience()" style="flex: 1;">Cancel</button>
                        </div>
                    </div>

                    <button class="btn-link" id="addExpBtn" onclick="showExpForm()">+ Add Experience</button>
                </div>
            </div>
        </div>

        <!-- Action Bar -->
        <div class="action-bar">
            <button class="btn-primary" onclick="previewPortfolio()">Preview Portfolio ‚Üí</button>
        </div>
    </div>

    <!-- Preview Page -->
    <div class="preview-page" id="previewPage">
        <!-- Header -->
        <div class="preview-header">
            <div class="container">
                <h1>Portfolio</h1>
                <button class="btn-secondary" onclick="editPortfolio()">‚Üê Edit</button>
            </div>
        </div>

        <!-- Content -->
        <div class="main-content">
            <div class="container">
                <!-- Hero Section -->
                <div class="preview-hero">
                    <div>
                        <img id="previewPhoto" class="preview-photo" src="">
                    </div>
                    <div class="preview-intro">
                        <h1 id="previewName">Your Name</h1>
                        <div class="contact-info">
                            <a id="previewEmailLink" href="">
                                üìß <span id="previewEmail"></span>
                            </a>
                            <a id="previewPhoneLink" href="">
                                üìû <span id="previewPhone"></span>
                            </a>
                        </div>
                        <p class="bio" id="previewBio"></p>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="preview-section" id="previewSkillsSection">
                    <h2>Skills</h2>
                    <div class="preview-skills" id="previewSkillsList"></div>
                </div>

                <!-- Experience Section -->
                <div class="preview-section" id="previewExpSection">
                    <h2>Experience</h2>
                    <div id="previewExpList"></div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="preview-footer">
            <div class="container">
                <p>¬© <span id="currentYear"></span> <span id="footerName">Your Name</span>. All rights reserved.</p>
            </div>
        </div>
    </div>

    <script>
        // Data Structure
        let portfolioData = {
            name: '',
            email: '',
            phone: '',
            photoUrl: '',
            bio: '',
            skills: [],
            experience: []
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            renderSkills();
            renderExperience();
        });

        // Skills Functions
        function addSkill() {
            const input = document.getElementById('skillInput');
            if (input.value.trim()) {
                portfolioData.skills.push(input.value.trim());
                input.value = '';
                renderSkills();
            }
        }

        function removeSkill(index) {
            portfolioData.skills.splice(index, 1);
            renderSkills();
        }

        function renderSkills() {
            const container = document.getElementById('skillsList');
            container.innerHTML = portfolioData.skills.map((skill, i) => `
                <div class="skill-tag">
                    ${skill}
                    <button onclick="removeSkill(${i})">√ó</button>
                </div>
            `).join('');
        }

        // Experience Functions
        function showExpForm() {
            document.getElementById('expForm').classList.add('active');
            document.getElementById('addExpBtn').classList.add('hidden');
        }

        function cancelExperience() {
            document.getElementById('expForm').classList.remove('active');
            document.getElementById('addExpBtn').classList.remove('hidden');
            clearExpForm();
        }

        function saveExperience() {
            const title = document.getElementById('expTitle').value.trim();
            const company = document.getElementById('expCompany').value.trim();
            const start = document.getElementById('expStart').value;
            const end = document.getElementById('expEnd').value;
            const description = document.getElementById('expDescription').value.trim();

            if (title && company && start && end) {
                portfolioData.experience.push({
                    title,
                    company,
                    start,
                    end,
                    description
                });
                cancelExperience();
                renderExperience();
            } else {
                alert('Please fill in all required fields');
            }
        }

        function removeExperience(index) {
            portfolioData.experience.splice(index, 1);
            renderExperience();
        }

        function clearExpForm() {
            document.getElementById('expTitle').value = '';
            document.getElementById('expCompany').value = '';
            document.getElementById('expStart').value = '';
            document.getElementById('expEnd').value = '';
            document.getElementById('expDescription').value = '';
        }

        function renderExperience() {
            const container = document.getElementById('experienceList');
            container.innerHTML = portfolioData.experience.map((exp, i) => `
                <div class="experience-item">
                    <div>
                        <h4>${exp.title}</h4>
                        <p>${exp.company}</p>
                        <p>${exp.start} ‚Äî ${exp.end}</p>
                        ${exp.description ? `<p class="description">${exp.description}</p>` : ''}
                    </div>
                    <button onclick="removeExperience(${i})">√ó</button>
                </div>
            `).join('');
        }

        // Preview Functions
        function previewPortfolio() {
            // Collect form data
            portfolioData.name = document.getElementById('fullName').value || 'Your Name';
            portfolioData.email = document.getElementById('email').value;
            portfolioData.phone = document.getElementById('phone').value;
            portfolioData.photoUrl = document.getElementById('photoUrl').value;
            portfolioData.bio = document.getElementById('bio').value;

            // Render preview
            document.getElementById('previewName').textContent = portfolioData.name;
            document.getElementById('previewBio').textContent = portfolioData.bio || 'No bio provided';
            document.getElementById('footerName').textContent = portfolioData.name;

            // Email
            if (portfolioData.email) {
                document.getElementById('previewEmail').textContent = portfolioData.email;
                document.getElementById('previewEmailLink').href = `mailto:${portfolioData.email}`;
            } else {
                document.getElementById('previewEmailLink').style.display = 'none';
            }

            // Phone
            if (portfolioData.phone) {
                document.getElementById('previewPhone').textContent = portfolioData.phone;
                document.getElementById('previewPhoneLink').href = `tel:${portfolioData.phone}`;
            } else {
                document.getElementById('previewPhoneLink').style.display = 'none';
            }

            // Photo
            const photoImg = document.getElementById('previewPhoto');
            if (portfolioData.photoUrl) {
                photoImg.src = portfolioData.photoUrl;
                photoImg.style.background = 'none';
            } else {
                photoImg.src = '';
                photoImg.style.background = 'linear-gradient(135deg, #bfdbfe, #cbd5e1)';
            }

            // Skills
            const skillsSection = document.getElementById('previewSkillsSection');
            if (portfolioData.skills.length > 0) {
                skillsSection.style.display = 'block';
                document.getElementById('previewSkillsList').innerHTML = portfolioData.skills
                    .map(skill => `<div class="preview-skill">${skill}</div>`)
                    .join('');
            } else {
                skillsSection.style.display = 'none';
            }

            // Experience
            const expSection = document.getElementById('previewExpSection');
            if (portfolioData.experience.length > 0) {
                expSection.style.display = 'block';
                document.getElementById('previewExpList').innerHTML = portfolioData.experience
                    .map(exp => `
                        <div class="preview-experience-item">
                            <div class="preview-experience-header">
                                <h3>${exp.title}</h3>
                                <span class="date">${exp.start} ‚Äî ${exp.end}</span>
                            </div>
                            <p class="preview-experience-company">${exp.company}</p>
                            ${exp.description ? `<p class="preview-experience-description">${exp.description}</p>` : ''}
                        </div>
                    `)
                    .join('');
            } else {
                expSection.style.display = 'none';
            }

            // Switch pages
            document.getElementById('formPage').style.display = 'none';
            document.getElementById('previewPage').classList.add('active');
        }

        function editPortfolio() {
            document.getElementById('formPage').style.display = 'block';
            document.getElementById('previewPage').classList.remove('active');
        }

        // Allow Enter key to add skill
        document.getElementById('skillInput')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addSkill();
        });
    </script>
</body>
</html>
